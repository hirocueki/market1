= simple_form_for(order, html: { class: 'form-inline' }) do |f|
  .field
    = f.input :name, id: :user_n placeholder: "名前", class: 'form-control'
    = f.input :address, id: :user_address, placeholder: "配送先", class: 'form-control'
    -#- AVAILABLE_DATES = (3.days.ago..14.days.ago).map{ |day| l(day) }
    = f.input :delivery_date, collection: [l(Date.today)], label: false
  .actions
    = f.submit '購入する', class: 'btn btn-primary mt-1'
